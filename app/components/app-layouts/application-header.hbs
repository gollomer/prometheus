<header class="main-header">
   {{!-- Logo --}}
<a href="javascript:void(0);" class="logo">
  {{!-- mini logo for sidebar mini 50x50 pixels --}}
  <span class="logo-mini"><img alt="{{t "application"}}" src="/img/app/logo-256.png"></span>
  {{!-- logo for regular state and mobile devices --}}
  <span class="logo-lg"><img alt="{{t "application"}}" src="/img/app/logo-256.png">{{t "views.app.application.header.title"}}</span>
</a>

{{!-- He ader Navbar --}}
<nav class="navbar navbar-static-top" role="navigation">
  {{!-- Sidebar toggle button--}}
  <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
    <span class="sr-only">{{t "views.app.togglenav"}}</span>
  </a>
  <div class="global-search">

<PowerSelect
  @placeholder={{t "global.form.searchPlaceholder"}}
  @searchEnabled={{true}}
  @search={{perform this.search}}
  @selected={{this.selected}}
  @onChange={{this.itemSelected}} as |issue|>
  <i class="fa fa-tasks"></i> <strong>#{{issue.number}}</strong> - {{issue.name}}
</PowerSelect>
  </div>
  {{!-- Navbar Right Menu --}}
  <div class="navbar-custom-menu">
    <ul class="nav navbar-nav">
      {{!-- Messages: style can be found in dropdown.less--}}
      <li class="dropdown messages-menu">
        {{!-- Menu toggle button --}}
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
          <i class="fa fa-envelope-o"></i>
          <span class="label label-success">{{t "views.app.application.header.four"}}</span>
        </a>
        <ul class="dropdown-menu">
          <li class="header">{{t "views.app.messages" count="4"}}</li>
          <li>
            {{!-- inner menu: contains the messages --}}
            <ul class="menu">
              <li>
                {{!-- start message --}}
                <a href="#">
                  <div class="pull-left">
                    {{!-- User Image --}}
                    <img src="http://projects4me/userimage/get/{{currentUser.user.id}}" class="img-circle" alt="{{t "global.form.image"}}">
                  </div>
                  {{!-- Message title and timestamp --}}
                  <h4>
                    {{t "views.app.application.header.supportTeam"}}
                    <small><i class="fa fa-clock-o"></i>{{t "views.app.application.header.fiveMins"}}</small>
                  </h4>
                  {{!-- The message --}}
                  <p>{{t "views.app.application.header.buyTheme"}}</p>
                </a>
              </li>
              {{!-- end message --}}
            </ul>
            {{!-- /.menu --}}
          </li>
          <li class="footer"><a href="#">{{t "views.app.allmessages"}}</a></li>
        </ul>
      </li>
      {{!-- /.messages-menu --}}

      {{!-- Notifications Menu --}}
      <li class="dropdown notifications-menu">
        {{!-- Menu toggle button --}}
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
          <i class="fa fa-bell-o"></i>
          <span class="label label-warning">{{t "views.app.application.header.thirteen"}}</span>
        </a>
        <ul class="dropdown-menu">
          <li class="header">{{t "views.app.notifications" count="13"}}</li>
          <li>
            {{!-- Inner Menu: contains the notifications --}}
            <ul class="menu">
              {{!-- start notification --}}
              <li>
                <a href="#">
                  <i class="fa fa-users text-aqua"></i>{{t "views.app.application.header.fiveMembers"}}
                </a>
              </li>
              {{!-- end notification --}}
            </ul>
          </li>
          <li class="footer"><a href="#">{{t "views.app.allnotifications"}}</a></li>
        </ul>
      </li>
      {{!-- Tasks Menu --}}
      <li class="dropdown tasks-menu">
        {{!-- Menu Toggle Button --}}
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
          <i class="fa fa-flag-o"></i>
          <span class="label label-danger">{{t "views.app.application.header.ten"}}</span>
        </a>
        <ul class="dropdown-menu">
          <li class="header">{{t "views.app.tasks" count="10"}}</li>
          <li>
            {{!-- Inner menu: contains the tasks --}}
            <ul class="menu">
              {{!-- Task item --}}
              <li>
                <a href="#">
                  {{!-- Task title and progress text --}}
                  <h3>
                    {{t "views.app.application.header.designButtons"}}
                    <small class="pull-right">{{t "views.app.application.header.twenty"}}</small>
                  </h3>
                  {{!-- The progress bar --}}
                  <div class="progress xs">
                    {{!-- Change the css width attribute to simulate progress --}}
                    <div class="progress-bar progress-bar-aqua" style="width: 20%" role="progressbar" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100">
                      <span class="sr-only">{{t "views.app.application.header.twentyComplete"}}</span>
                    </div>
                  </div>
                </a>
              </li>
              {{!-- end task item --}}
            </ul>
          </li>
          <li class="footer">
            <a href="#">{{t "views.app.alltasks"}}</a>
          </li>
        </ul>
      </li>
      {{!-- User Account Menu --}}
      <li class="dropdown user user-menu">
        {{!-- Menu Toggle Button --}}
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
          {{!-- The user image in the navbar--}}
          <img src="http://projects4me/userimage/get/{{currentUser.user.id}}" class="user-image" alt="{{currentUser.user.name}}">
          {{!-- hidden-xs hides the username on small devices so only the image appears. --}}
          <span class="hidden-xs">{{currentUser.user.name}}</span>

        </a>
        <ul class="dropdown-menu">
          {{!-- The user image in the menu --}}
          <li class="user-header">
            <img src="http://projects4me/userimage/get/{{currentUser.user.id}}" class="img-circle" alt="{{currentUser.user.name}}">

            <p>
              {{currentUser.user.name}} - {{currentUser.user.title}}
              <small>{{t "views.app.member"}}{{get-date currentUser.user 'createdDate' 'MMM YYYY'}}</small>
            </p>
          </li>
          {{!-- Menu Body --}}
          <li class="user-body">
            <div class="row">
              <div class="col-xs-4 text-center">
                <a href="#">{{t "views.app.activity"}}</a>
              </div>
              <div class="col-xs-4 text-center">
                <a href="#">{{t "views.app.today"}}</a>
              </div>
              <div class="col-xs-4 text-center">
                <a href="#">{{t "views.app.history"}}</a>
              </div>
            </div>
            {{!-- /.row --}}
          </li>
          {{!-- Menu Footer--}}
          <li class="user-footer">
            <div class="pull-left">
              <a href="#" class="btn btn-default btn-flat" {{action "viewProfile"}}>{{t "views.app.profile"}}</a>
            </div>
            <div class="pull-right">
              {{#if session.isAuthenticated}}
                <a class="btn btn-default btn-flat" href="javascript:void(0);" {{action 'signOut'}}>{{t "global.form.signout"}}</a>
              {{else}}
                <a class="btn btn-default btn-flat" href="javascript:void(0)" {{action 'signIn'}}>{{t "global.form.signin"}}</a>
              {{/if}}
            </div>
          </li>
        </ul>
      </li>
      {{!-- Control Sidebar Toggle Button --}}
      <li>
        <a href="javascript:void(0)" data-toggle="control-sidebar"><ion class="ion-md-chatboxes"></ion></a>
      </li>
    </ul>
  </div>
</nav>
</header>