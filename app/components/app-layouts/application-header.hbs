<header class="main-header">
   {{!-- Logo --}}
<a href="javascript:void(0);" class="logo">
  {{!-- mini logo for sidebar mini 50x50 pixels --}}
  <span class="logo-mini"><img alt="{{t "application"}}" src="/img/app/logo-256.png"></span>
  {{!-- logo for regular state and mobile devices --}}
  <span class="logo-lg"><img alt="{{t "application"}}" src="/img/app/logo-256.png">{{safe-html (t "views.app.application.header.title")}}</span>
</a>

{{!-- He ader Navbar --}}
<nav class="navbar navbar-static-top" role="navigation">
  {{!-- Sidebar toggle button--}}
  <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
    <span class="sr-only">{{t "views.app.togglenav"}}</span>
  </a>
  <div class="global-search">

    <PowerSelect
      @placeholder={{t "global.form.searchPlaceholder"}}
      @searchEnabled={{true}}
      @search={{perform this.search}}
      @onChange={{this.itemSelected}} as |issue|>
      <i class="fa fa-tasks"></i> <strong>#{{issue.number}}</strong> - {{issue.name}}
    </PowerSelect> 
  </div>

    {{!-- Create Modules e.g. Project,Issue,Conversation (START) --}}
    <div class="btn-group create-modules" data-project-id={{this.trackedProject.id}}>

      {{!-- Create Project --}}
      
      <AppUi::Button type="button" class="btn btn-default btn-sm" @onClick={{fn this.routeToModule 'project' 'app.projects.create'}} @aclContext="App.Project.Create">
        <i class="fa fa-briefcase"></i> <span>{{t "views.app.createProject"}}</span>
      </AppUi::Button>

      {{!-- Create Issue --}}
      <AppUi::Button type="button" class="btn btn-default btn-sm" @onClick={{fn this.routeToModule 'issue' 'app.project.issue.create' this.trackedProject.shortCode true}} @aclContext="App.Project.Issue.Create">
        <i class="fa fa-tasks"></i> <span>{{t "views.app.createIssue"}}</span>
      </AppUi::Button>

      {{!-- Create Conversation --}}
      <AppUi::Button type="button" class="btn btn-default btn-sm" @onClick={{fn this.routeToModule 'conversation' 'app.project.conversation' this.trackedProject.shortCode true}} @aclContext="App.Project.Conversation.Create">
        <i class="fa fa-comments"></i> <span>{{t "views.app.createConversation"}}</span>
      </AppUi::Button>
    </div>
    {{!-- Create Modules e.g. Project,Issue,Conversation (END) --}}

  {{!-- Navbar Right Menu --}}
  <div class="navbar-custom-menu">
    <ul class="nav navbar-nav">
      {{!-- Notifications Menu --}}
      <li class="dropdown notifications-menu">
        {{!-- Menu toggle button --}}
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
          <i class="fa fa-bell-o"></i>
          <span class="label label-warning">{{t "views.app.application.header.thirteen"}}</span>
        </a>
        <ul class="dropdown-menu">
          <li class="header">{{t "views.app.notifications" count="13"}}</li>
          <li>
            {{!-- Inner Menu: contains the notifications --}}
            <ul class="menu">
              {{!-- start notification --}}
              <li>
                <a href="#">
                  <i class="fa fa-users text-aqua"></i>{{t "views.app.application.header.fiveMembers"}}
                </a>
              </li>
              {{!-- end notification --}}
            </ul>
          </li>
          <li class="footer"><a href="#">{{t "views.app.allnotifications"}}</a></li>
        </ul>
      </li>
      {{!-- User Account Menu --}}
      <li class="dropdown user user-menu">
        {{!-- Menu Toggle Button --}}
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
          {{!-- The user image in the navbar--}}
          <img src="{{this.apiHost}}/userimage/get/{{this.currentUser.user.id}}" class="user-image" alt="{{this.currentUser.user.name}}">
          {{!-- hidden-xs hides the username on small devices so only the image appears. --}}
          <span id="user-name" class="hidden-xs">{{this.currentUser.user.name}}</span>

        </a>
        <ul class="dropdown-menu">
          {{!-- The user image in the menu --}}
          <li class="user-header">
            <img src="{{this.apiHost}}/userimage/get/{{this.currentUser.user.id}}" class="img-circle" alt="{{this.currentUser.user.name}}">

            <p>
              {{this.currentUser.user.name}} - {{this.currentUser.user.title}}
              <small>{{t "views.app.member"}}{{get-date this.currentUser.user 'createdDate' 'MMM YYYY'}}</small>
            </p>
          </li>
          {{!-- Menu Footer--}}
          <li class="user-footer">
            <div class="pull-left">
              <LinkTo @route="app.user.page" @model={{this.currentUser.user.id}} class="btn btn-default btn-flat" {{action "viewProfile"}}>{{t "views.app.profile"}}</LinkTo>
            </div>
            <div class="pull-right">
              {{#if this.session.isAuthenticated}}
                <div id="btn-signout">
                  <a class="btn btn-default btn-flat" href="javascript:void(0);" {{action 'signOut'}}>{{t "global.form.signout"}}</a>
                </div>
              {{else}}
                <div id="btn-signin">
                  <a class="btn btn-default btn-flat" href="javascript:void(0)" {{action 'signIn'}}>{{t "global.form.signin"}}</a>
                </div>
              {{/if}}
            </div>
          </li>
        </ul>
      </li>
    </ul>
  </div>
</nav>
</header>