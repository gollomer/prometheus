
{{!-- Sidebar user panel (optional) --}}
<div class="user-panel" {{initialize-sidebar}}>
  <div class="pull-left image">
    <img src="{{this.apiHost}}/userimage/get/{{this.currentUser.user.id}}" class="img-circle" alt="{{this.currentUser.user.name}}">
  </div>
  <div class="pull-left info">
    <p id="user-name">{{this.currentUser.user.name}}</p>
    {{!-- Status --}}
    <a href="#"><i class="fa fa-circle text-success"></i>{{t "views.app.online"}}</a>
  </div>
</div>

{{!-- search form (Optional) --}}
<div class="sidebar-form">
  <div class="input-group">
    <PowerSelect
        class="form-control"
        @options={{this.projectsList}}
        @selected={{find-by "value" this.projectId this.projectsList}}
        @placeholder={{t "views.nav.selectproject"}}
        searchField="label"
        @onChange={{this.projectChanged}}
        as |project|>
        {{project.label}}
    </PowerSelect>
  </div>
</div>
{{!-- /.search form --}}

{{!-- Sidebar Menu --}}
<ul class="sidebar-menu">
  <li class="header">{{t "views.nav.mainnav"}}</li>

  {{#each-in this.metaData as |module definition|}}
    {{#if definition.actions}}

      <li class="treeview">
        {{#if definition.projectRelated}}
          <a href="/{{this.appPrefix}}/{{this.projectId}}/{{definition.anchorRoute}}">
            <i class="fa fa-{{definition.icon}}"></i>
            <span>{{t definition.label}}</span>
            <span class="pull-right-container">
              <i class="fa fa-angle-left pull-right"></i>
            </span>
          </a>
        {{else}}
          <a href="/{{this.appPrefix}}/{{definition.anchorRoute}}">
            <i class="fa fa-{{definition.icon}}"></i>
            <span>{{t definition.label}}</span>
            <span class="pull-right-container">
              <i class="fa fa-angle-left pull-right"></i>
            </span>
          </a>
        {{/if}}
        <ul class="treeview-menu">
          {{#each-in definition.actions as |section menu|}}
            {{#each-in menu as |entity item|}}
              <li>
                {{#if definition.projectRelated}}
                  <a href="/{{this.appPrefix}}/{{this.projectId}}/{{item.anchorRoute}}" {{action "navigate" item.route  item.routeParams item.anchorRoute this.projectId}}>
                    <i class="fa fa-circle-o {{item.className}}"></i>{{t item.label}}
                  </a>
                {{else}}
                  <a href="/{{this.appPrefix}}/{{item.anchorRoute}}" {{action "navigate" item.route  item.routeParams item.anchorRoute}}>
                    <i class="fa fa-circle-o {{item.className}}"></i>{{t item.label}}
                  </a>
                {{/if}}
              </li>
            {{/each-in}}
            {{#if (not-last definition.actions menu)}}
              <li role="separator" class="divider"></li>
            {{/if}}
          {{/each-in}}
        </ul>
      </li>
    {{else}}
      <li class="treeview">
        {{#if definition.projectRelated}}
          <a href="/{{this.appPrefix}}/{{this.projectId}}/{{definition.anchorRoute}}" {{action "navigate" definition.route definition.routeParams definition.anchorRoute this.projectId}}>
            <i class="fa fa-{{definition.icon}}"></i>
            <span>{{t definition.label}}</span>
          </a>
        {{else}}
          <a href="/{{this.appPrefix}}/{{definition.anchorRoute}}" {{action "navigate" definition.route definition.routeParams definition.anchorRoute}}>
            <i class="fa fa-{{definition.icon}}"></i>
            <span>{{t definition.label}}</span>
          </a>
        {{/if}}
      </li>
    {{/if}}
  {{/each-in}}

  <li class="header">{{t "views.app.components.navBar.admin"}}</li>
  <li><a href="#"><i class="fa fa-circle-o text-red"></i> <span>{{t "views.app.components.navBar.important"}}</span></a></li>
  <li><a href="#"><i class="fa fa-circle-o text-yellow"></i> <span>{{t "views.app.components.navBar.warning"}}</span></a></li>
  <li><a href="#"><i class="fa fa-circle-o text-aqua"></i> <span>{{t "views.app.components.navBar.information"}}</span></a></li>
</ul>
{{!-- /.sidebar-menu --}}