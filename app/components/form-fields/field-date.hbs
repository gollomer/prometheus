<AccessControl @aclContext={{@aclContext}}>
  <div data-field={{@data-field}} class="form-field ember-view field-date">
    <Input placeholder={{@placeholder}} @type={{@type}} class="form-control input-sm data-input" @value={{@value}} readonly={{true}}
      aria-invalid="true" aria-describedBy={{@data-field}} autocomplete="off"
      {{on "focusout" (action (mut this.shouldValidate) true) }}
      {{on "blur" (fn this.validate)}}
      {{date-picker @update @format @singleDatePicker @showDropdowns @positionX @positionY @timePicker @timePickerIncrement @startDate @endDate @minDate this.maxDate @maxSpan @minYear @maxYear @autoApply @parentEl}} />
    <span class="highlight"></span>
    <span class="bar"></span>

    {{!-- Label --}}
    <div data-form-field="label">
      <label class="floating-label">
        {{@label}} 
      </label>

        {{!-- Field Label Information --}}
      {{#if @showFieldInfo}}
        <div>
          <i class="fa fa-info-circle" aria-hidden="true" data-label-info="btn" {{on "click" (fn this.toggleLabelInfo @data-field)}}></i>
        </div>
        <div class="field-label-info" data-field-label="info">
          <i class="fa fa-caret-left" aria-hidden="true" data-field-label="caret"></i>
          <p>{{@info}}</p>
        </div>
      {{/if}}
    </div>

    {{#if (and @message this.shouldValidate)}}
      <span class="error text-red" id={{@data-field}}>
        {{@message}}
      </span>
    {{/if}}
  </div>
</AccessControl>