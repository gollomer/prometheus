<div class="info-box bg-green" data-milestone={{concat @milestone.name " | " @milestone.startDate}}>
  <span class="info-box-icon"><i class="fa fa-check"></i></span>

  <div class="info-box-content" data-milestone-status={{@milestone.status}}>
    <span class="info-box-text">{{t (concat "views.app.milestone.lists.status." @milestone.status)}}</span>
    {{yield}}
  </div>
</div>
