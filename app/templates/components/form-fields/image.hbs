{{drop-zone url='http://example.com/example' uploadMultiple=false addRemoveLinks=true}}

<span class="highlight"></span>
<span class="bar"></span>
<label class="floating-label">{{label}}</label>
<span class="count pull-right">{{#if length}}{{value.length}}/{{length}}{{/if}}</span>
{{#if v-focus}}
  <span class="error text-red">
    {{v-get v-model v-field v-output}}
  </span>
{{/if}}