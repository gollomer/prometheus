<i class="fa fa-paperclip bg-purple"></i>

<div class="timeline-item">
  <span class="time"><i class="fa fa-clock-o"></i> {{activity.createdSince}} {{t "global.ago"}}</span>
  <h3 class="timeline-header">
    <a href="#">{{activity.createdUserName}}</a>
    {{t (concat "views.app.activity.related." activity.relatedActivity)}}
    <a href="javascript:void(0);" {{action "openMilestone" activity.relatedActivityId}}>
      {{t (concat "global.module.singular." activity.relatedActivityModule)}}
    </a>
  </h3>
  <div class="timeline-body">
    {{safe-html activity.description}}
  </div>
</div>
