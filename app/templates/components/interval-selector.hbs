<div class="interval-selector">

  <div class="days">
    <label>{{t "view.app.components.intervalselector.days"}}</label>
    {{input value=days type="number" min="0" max="99"}}
  </div>

  <div class="hours">
    <label>{{t "view.app.components.intervalselector.hours"}}</label>
    {{input value=hours type="number" min="0" max="8"}}
  </div>

  <div class="minutes">
    <label>{{t "view.app.components.intervalselector.minutes"}}</label>
    {{input value=minutes type="number" min="0" max="60" step="10"}}
  </div>
</div>
