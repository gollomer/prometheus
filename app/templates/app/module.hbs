<div class="module-view-wrapper">
  <div class="module-view">

    <div class="list-view-header clearfix">

      <div class="list-view-module">
        <h1>{{module}}</h1>
      </div>

      <div class="btn-group">
        <AppUi::Button type="button" class="btn btn-default"> <i class="fa fa-plus"></i> {{t "global.form.createnew"}}</AppUi::Button>
      </div>

    </div>

    <div class="row list-view-actions">
      <div class="col-sm-10">
        <div class="input-group">
          <AppUi::Button id="toggleFilters" {{action "toggleFilters"}} type="button" class="btn dropdown-toggle" data-toggle="collapse" data-target=".list-view-filters">
            <span class="caret"></span>
            <span class="sr-only">{{t "global.list.toggleDropdown"}}</span>
          </AppUi::Button>
          {{text-field key-up="populateQuery" focus-in="openFilters" insert-newline="filter" value=query name="query" placeholder=(t "global.form.search" class="form-control")}}
          <span class="input-group-btn">
            <AppUi::Button type="button" class="btn btn-default" {{action "filter"}}><i class="fa fa-search"></i></AppUi::Button>
          </span>
        </div>
      </div>

      <div class="btn-group col-sm-2">
        <span class="list-view-count pull-left">{{t "global.list.selected"}} {{selectedCount}}</span>
        <span class="pagination">
          {{#if model.content.meta._links.prev}}
            <AppUi::Button type="button" class="btn btn-default" {{action "paginate" (get-page model.content.meta._links.next.href)}}><i class="fa fa-angle-double-left"></i></AppUi::Button>
          {{else}}
            <AppUi::Button type="button" class="btn btn-default disabled"><i class="fa fa-angle-double-left"></i></AppUi::Button>
          {{/if}}

          {{#if model.content.meta._links.next}}
            <AppUi::Button type="button" class="btn btn-default" {{action "paginate" (get-page model.content.meta._links.next.href)}}><i class="fa fa-angle-double-right"></i></AppUi::Button>
          {{else}}
            <AppUi::Button type="button" class="btn btn-default disabled"><i class="fa fa-angle-double-right"></i></AppUi::Button>
          {{/if}}
        </span>
      </div>
    </div>

    <div class="row list-view-filters collapse">
      <div id="builder"></div>
      <AppUi::Button id="btn-get" type="button" class="btn btn-default" {{action "searchByRules"}}>{{t "global.form.search"}}</AppUi::Button>
    </div>

    <div class="list-view table-responsive">
      <table class="table table-hover table-striped table-bordered">
        <thead>
          <tr>
            <th>
              <div class="btn-group">
                <AppUi::Button type="button" class="btn">{{checkbox-field action=(action "selectAll") type="checkbox" data-select="all"}}</AppUi::Button>
                <AppUi::Button type="button" class="btn dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                  <span class="caret"></span>
                  <span class="sr-only">{{t 'global.list.toggleDropdown'}}</span>
                </AppUi::Button>
                <ul class="dropdown-menu">
                  <li><a href="javascript:void(0);" {{action "selectAll"}}>{{t 'global.list.selectAll'}}</a></li>
                  <li><a href="javascript:void(0);" {{action "deleteAll"}}>{{t 'global.list.deleteAll'}}</a></li>
                  <li><a href="javascript:void(0);" {{action "exportAll"}}>{{t 'global.list.exportAll'}}</a></li>
                  <li><a href="javascript:void(0);" {{action "updateAll"}}>{{t 'global.list.updateAll'}}</a></li>
                </ul>
              </div>
            </th>
            {{#each-in metaData.fields as |field definition|}}
              {{#if definition.sort}}
                <th class="sortable" data-sort="{{module}}.{{definition.fieldName}}Sortable"><a href="javascript:void(0);" {{action "sortData" definition.fieldName}}>{{t definition.label}}</a></th>
              {{else}}
                <th>{{t definition.label}}</th>
              {{/if}}
            {{/each-in}}
          </tr>
        </thead>
        <tbody>
          {{#each model as |entity|}}
            <tr>
              <td>
                <div class="btn-group">
                  <AppUi::Button type="button" class="btn">{{checkbox-field action=(action "select") type="checkbox" data-select=entity.id}}</AppUi::Button>
                  <AppUi::Button type="button" class="btn dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <span class="caret"></span>
                    <span class="sr-only">{{t "global.list.toggleDropdown"}}</span>
                  </AppUi::Button>
                  <ul class="dropdown-menu">
                    <li><a href="javascript:void(0);" {{action "select"}}>{{t 'global.list.select'}}</a></li>
                    <li><a href="javascript:void(0);" {{action "export"}}>{{t 'global.list.export'}}</a></li>
                    <li><a href="javascript:void(0);" {{action "delete"}}>{{t 'global.list.delete'}}</a></li>
                    <li><a href="javascript:void(0);" {{action "edit" entity.id}}>{{t 'global.list.edit'}}</a></li>
                    <li><a href="javascript:void(0);" {{action "detail" entity.id}}>{{t 'global.list.detail'}}</a></li>
                  </ul>
                </div>
              </td>
              {{#each-in metaData.fields as |field definition|}}
                <td>{{field-view view='list' navigate=(action "detail" entity.id) definition=definition model=entity field=field module=module}}</td>
              {{/each-in}}
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</div>
