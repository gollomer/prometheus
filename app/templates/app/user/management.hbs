<div class="user-management">
  
    <section class="content-header">
    <h1>
      {{t "views.app.user.management.title"}}
    </h1>

  </section>

  <section class="content">

    <div class="row">

      <div class="col-md-12">
        
        <div class="box box-primary">
          <div class="box-body">

            <div class="header">
                
              <FormFields::FieldSearch
                @placeholder={{t "views.app.user.management.search"}}
                @data-module="user-management"
                @searchFunction={{this.searchUserByName}}
              />

            </div>     

            <hr>       

            {{! +User List Container }}
            <div class="table-responsive users">
              <table class="table table-hover table-striped">

                <thead>
                  <tr>
                    <th>#</th>
                    <th>{{t "views.app.user.management.list.profile"}}</th>
                    <th>{{t "views.app.user.management.list.emailaddress"}}</th>
                    <th>{{t "views.app.user.management.list.accountStatus"}}</th>
                  </tr>
                </thead>

                <tbody>
                {{#each this.users as |user|}}
                    <tr data-user-id={{user.id}}>
                      
                    <td>
                      <FormFields::FieldCheckbox @select={{action this.select user.id}} @data-select={{user.id}}/>
                    </td>

                      <td class="user-profile">
                        <img class="user-img" src="{{this.apiHost}}/userimage/get/{{user.id}}" alt="user-img">
            
                        <div>
                          <LinkTo @route="app.user.page" @model={{user.id}}> 
                            <div data-user-field="name">{{user.name}}</div> 
                          </LinkTo>
                          <div class="title">{{user.title}}</div>
                        </div>                      
                      </td>

                      <td data-user-field="email">{{user.email}}</td>
                      <td data-user-field="account-status" class={{user.accountStatus}}>{{t (concat "views.app.user.accountStatus." user.accountStatus)}}</td>

                      <td class="pull-right icons">
                        <i class="fa fa-trash" aria-hidden="true" {{on "click" (fn this.deleteUser user) }}></i>
                      </td>
                      
                    </tr>
                    
                {{/each}}
                
                </tbody>
              </table>

            </div>
            {{! -User List Container}}

          </div>

        </div>

      </div>

    </div>

  </section>

</div>