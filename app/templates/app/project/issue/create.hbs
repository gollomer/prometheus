<div class="create-issue">

        <div class="row">
            <div class="col-md-8">

                <div class="box box-primary issues-details">
                    <div class="box-header with-border">
                        <h3 class="box-title">Create Issue</h3>

                        <div class="box-tools pull-right">

                        </div>

                    </div>
                    <!-- /.box-header -->
                    <div class="box-body no-padding" style="display: block;">

                        <form {{action 'addIssue' on='submit'}}>
                            <div class="form-group">
                                {{field-text
                                        placeholder="Enter the issue subject .."
                                        label="Issue Subject"
                                        value=model.subject
                                        mask="alphanumeric"
                                }}

                                {{field-textarea
                                        placeholder="Enter the issue description .."
                                        label="Description"
                                        value=model.description
                                }}

                                type


                                {{field-date
                                        placeholder="Enter the issue name .."
                                        label="Start Date"
                                        value=model.startDate
                                        mask="alphanumeric"
                                }}

                                {{field-date
                                        placeholder="Enter the issue name .."
                                        label="End Date"
                                        value=model.endDate
                                        mask="alphanumeric"
                                }}

                                status

                                priority

                                <div class="form-field ember-view">
                                    <div class="input-group select-input">
                                        {{#power-select
                                                class="form-control"
                                                options=milestoneList
                                                placeholder=(t "view.app.issue.create.selectmilestone")
                                                selected=(find-by "value" model.milestoneId milestoneList)
                                                searchField="label"
                                                onchange=(action "selectMilestone")
                                        as |milestone|}}
                                            {{milestone.label}}
                                        {{/power-select}}
                                    </div>
                                    <span class="highlight"></span>
                                    <span class="bar"></span>
                                    <label class="floating-label">{{t "view.app.issue.create.milestone"}}</label>
                                    <span class="count pull-right">{{#if length}}{{value.length}}/{{length}}{{/if}}</span>
                                    <span class="error hidden text-red">This field cannot be required</span>
                                </div>

                            </div>
                        </form>

                    </div>
                    <!-- /.box-body -->
                    <div class="box-footer text-center" style="display: block;">
                        <a href="javascript:void(0)" class="uppercase">{{t "view.app.project.detail.viewallissues"}}</a>
                    </div>
                    <!-- /.box-footer -->
                </div>

            </div>


            <div class="col-md-4">

                <div class="box box-warning issues-details">
                    <div class="box-header with-border">
                        <h3 class="box-title">People</h3>

                        <div class="box-tools pull-right">

                        </div>

                    </div>
                    <!-- /.box-header -->
                    <div class="box-body no-padding" style="display: block;">

                        <div class="form-field ember-view">
                            <div class="input-group select-input">
                                {{#power-select
                                        class="form-control"
                                        options=memberList
                                        placeholder=(t "view.app.issue.create.selectassignee")
                                        selected=(find-by "value" model.assignee memberList)
                                        searchField="label"
                                        onchange=(action "selectAssignee")
                                as |member|}}
                                    {{member.label}}
                                {{/power-select}}
                            </div>
                            <span class="highlight"></span>
                            <span class="bar"></span>
                            <label class="floating-label">{{t "view.app.issue.create.assignedTo"}}</label>
                            <span class="count pull-right">{{#if length}}{{value.length}}/{{length}}{{/if}}</span>
                            <span class="error hidden text-red">This field cannot be required</span>
                        </div>


                        <div class="form-field ember-view">
                            <div class="input-group select-input">
                                {{#power-select
                                        class="form-control"
                                        options=memberList
                                        placeholder=(t "view.app.issue.create.selectowner")
                                        selected=(find-by "value" model.owner memberList)
                                        searchField="label"
                                        onchange=(action "selectOwner")
                                as |member|}}
                                    {{member.label}}
                                {{/power-select}}
                            </div>
                            <span class="highlight"></span>
                            <span class="bar"></span>
                            <label class="floating-label">{{t "view.app.issue.create.ownedBy"}}</label>
                            <span class="count pull-right">{{#if length}}{{value.length}}/{{length}}{{/if}}</span>
                            <span class="error hidden text-red">This field cannot be required</span>
                        </div>

                    </div>
                    <!-- /.box-body -->
                    <div class="box-footer text-center" style="display: block;">
                        
                    </div>
                    <!-- /.box-footer -->
                </div>

            </div>

        </div>

</div>